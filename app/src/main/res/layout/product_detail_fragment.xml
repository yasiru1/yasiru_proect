<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:liftOnScroll="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView android:id="@+id/product_detail_back"
                    android:background="?attr/actionBarItemBackground"
                    android:padding="24dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_grey"
                    android:contentDescription="string/product_detail_back_cd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView android:textSize="12sp" android:textColor="@color/red"
                    android:id="@+id/product_detail_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="string/product_detail_toolbar_title"
                    android:textAllCaps="true"
                    android:fontFamily="@font/quicksand_bold"
                    android:textAlignment="textEnd"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout android:orientation="vertical"
                android:background="@color/cream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/product_detail_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>
                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/product_detail_gallery_tab_layout"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tabBackground="@drawable/gallery_indicators"
                        app:tabGravity="fill"
                        app:tabIndicatorHeight="0dp"/>
                </LinearLayout>
                <TextView android:textSize="28sp"
                    android:textColor="@color/dark_gray"
                    android:ellipsize="end"
                    android:id="@+id/product_detail_title"
                    android:paddingTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="string/placeholder_recipe_title"
                    android:maxLines="3"
                    android:fontFamily="@font/quicksand_medium"
                    android:textAlignment="textStart"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>

                <TextView android:textSize="16sp"
                    android:textColor="@color/dark_gray"
                    android:id="@+id/product_detail_description"
                    android:paddingTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="string/placeholder_lorem_ipsum"
                    android:fontFamily="@font/quicksand_regular"
                    android:textAlignment="textStart"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"/>
                <include android:id="@+id/product_detail_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    layout="@layout/product_detail_simple_card"/>
                <include android:id="@+id/product_detail_allergens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/product_detail_simple_card"/>


                <View android:layout_width="match_parent" android:layout_height="240dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
